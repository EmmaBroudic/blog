// views/login.pug

doctype html
html
  head
    title= "MOVIREC"
    meta(charset='UTF-8')
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    block styles
      link(rel='stylesheet', type='text/css', href="./styles/login.css")  
  body
    h1 Inscription

    form(action='/submit-register', method='post', class="form")

      label(for="email") Email:
      input(type="email", placeholder="Entrez votre e-mail", name="e-mail", id="mail", required)

      label(for="password") Mot de passe:
      input(type="password", placeholder="Entrez votre mot de passe", name="mot de passe", id="password", required)

      input(type="submit", value="Submit")